# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Upload Configuration
UPLOAD_FOLDER=/tmp/mindpulse_uploads
MAX_CONTENT_LENGTH=16M  # Human-readable format: 16M, 1GB, 512K, etc.

# Processor Configuration
KEYS_DIR=/etc/mindpulse/keys  # Directory containing AES key files (hex format)
RSYNC_DEST_BASE=user@remote-server:/path/to/destination  # Base rsync destination
